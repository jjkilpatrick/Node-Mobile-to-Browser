<polymer-element name="post-card">
  <template>
    <style>
      :host {
        display: block;
        position: relative;
        background-color: white;
        padding: 20px;
        font-size: 1.2rem;
        font-weight: 300;
        margin: 40px 0;
      }
      .card-header {
        margin-bottom: 10px;
      }
      polyfill-next-selector { content: '.card-header h2'; }
      .card-header ::content h2 {
        margin: 0;
        font-size: 1.8rem;
        font-weight: 300;
      }
      polyfill-next-selector { content: '.card-header img'; }
      .card-header ::content img {
        width: 70px;
        border-radius: 50%;
        margin: 10px;
      }
      paper-button[raised].colored {
        background: #4285f4;
        color: #fff;
      }
    </style>
    <div class="card-header" layout horizontal center>
      <content select="img"></content>
      <content select="h2"></content>
    </div>
    <content></content>
  </template>
  <script>
  Polymer({});
  </script>
</polymer-element>

<post-card>
  <div horizontal center-justified layout>
    <p class="no-margin-top">{{description}}</p>
  </div>
  <div horizontal center-justified layout>
    <paper-button raised="" class="colored" role="button" tabindex="0" id="trigger">{{button}}</paper-button>
  </div>
</post-card>